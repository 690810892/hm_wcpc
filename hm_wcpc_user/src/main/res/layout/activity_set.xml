<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/white">

        <ImageView
            android:id="@id/title_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:paddingTop="@dimen/margin_20"
            android:paddingBottom="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_30"
            android:paddingRight="@dimen/margin_30"
            android:src="@mipmap/img_title_back"
            android:background="@color/transparent"
            android:drawablePadding="5dp"
            android:contentDescription="@string/contentdescription"/>

        <TextView
            android:id="@+id/title_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/textsize_8"/>

        <TextView
            android:id="@id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/textsize_9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@id/textview_0"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@mipmap/triangle"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/tv_share"
                    android:textColor="@color/cl_5e5e5e"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@id/textview_1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@mipmap/triangle"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/tv_feedback"
                    android:textColor="@color/cl_5e5e5e"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:id="@id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:gravity="center_vertical"
                        android:text="@string/tv_clearcash"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@id/textview_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@mipmap/triangle"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="5dp"
                        android:gravity="right|center_vertical"
                        android:text="12M"
                        android:textSize="14sp"
                        android:textColor="@color/cl_a0a0a0"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@id/textview_3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@mipmap/triangle"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/tv_update"
                    android:textColor="@color/cl_5e5e5e"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@id/textview_4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableRight="@mipmap/triangle"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:gravity="center_vertical"
                    android:text="@string/tv_aboutus"
                    android:textColor="@color/cl_5e5e5e"
                    android:textSize="14sp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian" />

            <TextView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/tv_exit"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="@color/cl_fca03d"
                android:textSize="14sp"
                android:gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:src="@drawable/line_shadow" />

    </FrameLayout>
</LinearLayout>
