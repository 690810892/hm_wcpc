<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/white">

        <ImageView
            android:id="@id/title_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@color/transparent"
            android:contentDescription="@string/contentdescription"
            android:drawablePadding="5dp"
            android:paddingBottom="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_30"
            android:paddingRight="@dimen/margin_30"
            android:paddingTop="@dimen/margin_20"
            android:src="@mipmap/img_title_back" />

        <TextView
            android:id="@+id/title_btn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/textsize_8" />

        <TextView
            android:id="@id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/textsize_9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/textview_0"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/tv_share"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <TextView
                        android:id="@+id/tv_dafen"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="给我打分"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <TextView
                        android:id="@id/textview_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/tv_feedback"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <LinearLayout
                        android:id="@id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:text="@string/tv_clearcash"
                            android:textColor="@color/cl_5e5e5e"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@id/textview_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/triangle"
                            android:gravity="right|center_vertical"
                            android:text="12M"
                            android:textColor="@color/cl_a0a0a0"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <TextView
                        android:id="@+id/tv_shuoming"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="软件使用说明"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <TextView
                        android:id="@+id/tv_xieyi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="用户协议"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <TextView
                        android:id="@id/textview_3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/tv_update"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:layout_marginLeft="15dp"
                        android:src="@color/xian" />

                    <TextView
                        android:id="@id/textview_4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableRight="@mipmap/triangle"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/tv_aboutus"
                        android:textColor="@color/cl_5e5e5e"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/xian" />

                <TextView
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:paddingBottom="13dp"
                    android:paddingTop="13dp"
                    android:text="@string/tv_exit"
                    android:textColor="@color/cl_fca03d"
                    android:textSize="14sp" />

            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:src="@drawable/line_shadow" />

    </FrameLayout>
</LinearLayout>
