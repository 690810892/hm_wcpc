<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title_noline" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:src="@color/xian"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/img_logo_topay"
                    android:drawablePadding="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="您需要支付"
                    android:textColor="#414141"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="元"
                    android:textColor="@color/status_complete"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@id/textview_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/textview"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:text="15"
                    android:textColor="@color/status_complete"
                    android:textSize="15sp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:src="@color/xian"/>

            <RelativeLayout
                android:id="@id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/img_logo_coupon"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="使用优惠券"
                    android:textColor="#414141"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@id/imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/triangle"/>

                <LinearLayout
                    android:id="@id/layout_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/imageview"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/textview"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"
                        android:text="15"
                        android:textColor="@color/status_complete"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="元"
                        android:textColor="@color/status_complete"
                        android:textSize="12sp"/>

                </LinearLayout>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:src="@color/xian"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@id/layout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@id/imageview_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/img_logo_feeaccount"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview_3"
                        android:layout_centerVertical="true"
                        android:text="余额支付"
                        android:textColor="@color/word_color"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@id/textview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/checkbox_3"
                        android:layout_marginRight="10dp"
                        android:text="余额100元"
                        android:textColor="@color/qianhui"
                        android:textSize="14sp"/>

                    <CheckBox
                        android:id="@id/checkbox_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margin_20"
                        android:button="@drawable/radiobutton_select"
                        android:paddingRight="10dp"
                        android:checked="true" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <RelativeLayout
                    android:id="@id/layout_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@id/imageview_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/img_logo_alipay"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview_0"
                        android:layout_centerVertical="true"
                        android:text="支付宝支付"
                        android:textColor="@color/word_color"
                        android:textSize="14sp"/>

                    <CheckBox
                        android:id="@id/checkbox_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margin_20"
                        android:button="@drawable/radiobutton_select"
                        android:paddingRight="10dp"
                        android:checked="false" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <RelativeLayout
                    android:id="@id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@id/imageview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="25dp"
                        android:src="@mipmap/img_logo_weixin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview_1"
                        android:layout_centerVertical="true"
                        android:text="微信支付"
                        android:textColor="@color/word_color"
                        android:textSize="14sp"/>

                    <CheckBox
                        android:id="@id/checkbox_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margin_20"
                        android:button="@drawable/radiobutton_select"
                        android:paddingRight="10dp"
                        android:checked="false" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="15dp"/>

                <RelativeLayout
                    android:id="@id/layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp">

                    <ImageView
                        android:id="@id/imageview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:src="@mipmap/img_logo_unipay"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview_2"
                        android:layout_centerVertical="true"
                        android:text="银联支付"
                        android:textColor="@color/word_color"
                        android:textSize="14sp"/>

                    <CheckBox
                        android:id="@id/checkbox_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/margin_20"
                        android:button="@drawable/radiobutton_select"
                        android:paddingRight="10dp"
                        android:checked="false" />

                </RelativeLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian"/>

            <TextView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_login"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="确认"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#feffff"
                android:textSize="14sp"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
