<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title_image_noline" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@id/layout_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp">

                        <TextView
                            android:id="@id/textview_0"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:text="订单消息"
                            android:textColor="@color/yellow"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@id/imageview_2"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="right"
                            android:layout_marginRight="35dp"
                            android:layout_marginTop="14dp"
                            android:visibility="visible"
                            android:src="@drawable/img_notice"/>

                    </FrameLayout>

                    <ImageView
                        android:id="@id/imageview_0"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@color/yellow"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@id/layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/textview_1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="系统消息"
                        android:textColor="@color/cl_a0a0a0"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@id/imageview_1"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@color/yellow"/>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout
                    android:id="@+id/refreshLoadmoreLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" >

                    <xtom.frame.view.XtomListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="@color/transparent"
                        android:divider="@color/xian"
                        android:dividerHeight="0dp"
                        android:scrollbars="none"
                        android:listSelector="@color/transparent" />

                </com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout>

                <com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout
                    android:id="@+id/refreshLoadmoreLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible" >

                    <xtom.frame.view.XtomListView
                        android:id="@+id/listview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="@color/transparent"
                        android:divider="@color/xian"
                        android:dividerHeight="0dp"
                        android:scrollbars="none"
                        android:listSelector="@color/transparent" />

                </com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout>

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/line_shadow" />
    </FrameLayout>
</LinearLayout>
