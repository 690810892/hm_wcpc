<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_logo_user"
            android:padding="15dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/title_btn_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_logo_notice"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/title_point"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/img_point"
            android:contentDescription="@string/contentdescription"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_title"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xian"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_firstpage" />

        <RelativeLayout
            android:id="@id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_25"
            android:gravity="center_horizontal">

            <RadioGroup
                android:id="@id/radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:text="" >
            </RadioGroup>
        </RelativeLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/layout_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@id/textview_0"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="合租车"
                android:textColor="@color/yellow"
                android:textSize="16sp"/>

            <ImageView
                android:id="@id/imageview_0"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="visible"
                android:src="@color/yellow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="客运"
                android:textColor="@color/qianhui"
                android:textSize="16sp"/>

            <ImageView
                android:id="@id/imageview_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="invisible"
                android:src="@color/yellow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@id/textview_2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="婚庆"
                android:textColor="@color/qianhui"
                android:textSize="16sp"/>

            <ImageView
                android:id="@id/imageview_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="invisible"
                android:src="@color/yellow"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@id/textview_9"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center"
                android:text="货运"
                android:textColor="@color/qianhui"
                android:textSize="16sp"/>

            <ImageView
                android:id="@id/imageview_9"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:visibility="invisible"
                android:src="@color/yellow"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <FrameLayout
            android:id="@+id/layout_hezuche"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout
                android:id="@+id/refreshLoadmoreLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <com.hemaapp.wcpc_user.view.AutoChangeViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="fill_parent"
                            android:layout_height="170dp"
                            android:background="@mipmap/default_image_big" />

                        <RelativeLayout
                            android:id="@id/layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/margin_15"
                            android:layout_marginRight="@dimen/margin_30"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <RadioGroup
                                android:id="@id/radiogroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:text="" >
                            </RadioGroup>
                        </RelativeLayout>
                    </FrameLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:src="@color/xian"/>

                    <LinearLayout
                        android:id="@id/layout_3"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/img_firstpage_in"
                            android:contentDescription="@string/contentdescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="市内车主"
                            android:textColor="#3f3f3f"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="查看全部市内车主"
                            android:layout_marginLeft="10dp"
                            android:drawableRight="@mipmap/triangle"
                            android:textColor="@color/qianhui"
                            android:textSize="16sp"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@color/xian"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:src="@color/xian"/>

                    <LinearLayout
                        android:id="@id/layout_4"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:paddingRight="15dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/white">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="15dp"
                            android:src="@mipmap/img_firstpage_out"
                            android:contentDescription="@string/contentdescription"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="跨城车主"
                            android:textColor="#3f3f3f"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="查看全部跨城车主"
                            android:layout_marginLeft="10dp"
                            android:drawableRight="@mipmap/triangle"
                            android:textColor="@color/qianhui"
                            android:textSize="16sp"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:src="@color/xian"/>
                </LinearLayout>
            </com.hemaapp.hm_FrameWork.view.RefreshLoadmoreLayout>

            <LinearLayout
                android:id="@id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:visibility="invisible"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="#e2e2e2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f4f4f4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/textview_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/bt_login"
                        android:gravity="center"
                        android:text="发布市内行程"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@id/textview_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bt_outcity"
                        android:gravity="center"
                        android:text="发布跨城行程"
                        android:textColor="#f6a222"
                        android:textSize="16sp"/>

                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_keyun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@mipmap/img_empty_infor"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hunqing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@mipmap/img_empty_infor"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_huoyun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@mipmap/img_empty_infor"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
