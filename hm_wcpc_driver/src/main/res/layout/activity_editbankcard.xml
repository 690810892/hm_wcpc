<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_linearLayout">

    <include layout="@layout/title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:src="@color/xian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:text="卡类型"
                android:textColor="@color/black2"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/textview"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="请选择卡类型"
                android:gravity="center_vertical"
                android:textColor="@color/qianhui"
                android:textSize="14sp"
                android:drawableRight="@mipmap/triangle"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:src="@color/xian"/>

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:text="持卡人"
                android:textColor="@color/black2"
                android:textSize="14sp"/>

            <EditText
                android:id="@id/edittext_0"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:hint="请填写持卡人姓名"
                android:text=""
                android:gravity="center_vertical"
                android:textColorHint="@color/qianhui"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:src="@color/xian"/>

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="15dp"
                android:text="卡号"
                android:textColor="@color/black2"
                android:textSize="14sp"/>

            <EditText
                android:id="@id/edittext_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:hint="请填写卡号"
                android:text=""
                android:gravity="center_vertical"
                android:textColorHint="@color/qianhui"
                android:textSize="14sp"
                android:textColor="@color/black2"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请绑定持卡人是本人的银行卡"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/yellow"
        android:textSize="14sp" />

</LinearLayout>
