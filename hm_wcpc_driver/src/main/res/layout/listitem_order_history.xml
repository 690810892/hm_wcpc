<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:src="@color/background" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@mipmap/img_starttime"
                android:drawablePadding="8dp"
                android:text="出发时间"
                android:textColor="@color/shenhui"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_staut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:text="行程状态"
                android:textColor="@color/status_togo"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:layout_marginLeft="10dp"
            android:src="@color/xian" />

        <RelativeLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <com.hemaapp.hm_FrameWork.view.RoundedImageView
                android:id="@+id/imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_user" />

            <TextView
                android:id="@+id/tv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview"
                android:drawableLeft="@mipmap/img_first_pin"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="8dp"
                android:text="拼车"
                android:textColor="@color/yellow"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageview"
                android:text="用户名称"
                android:textColor="@color/shenhui"
                android:textSize="14sp" />

            <ImageView
                android:id="@id/imageview_0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/tv_name"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_sex_boy" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/imageview_0"
                android:text="乘车次数"
                android:textColor="@color/qianhui"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@id/layout_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/imageview_1"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_startposition" />

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="起始点"
                    android:textColor="@color/shenhui"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_0"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/imageview_1"
                android:layout_toRightOf="@id/imageview"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_endposition" />

                <TextView
                    android:id="@id/tv_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="目的地"
                    android:textColor="@color/shenhui"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:id="@id/imageview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:layout_marginRight="15dp"
                android:src="@mipmap/triangle" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:layout_marginLeft="10dp"
            android:src="@color/xian" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="乘车人数"
                android:textColor="@color/yellow"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_button1"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_operate"
                android:gravity="center"
                android:padding="5dp"
                android:text="删除订单"
                android:textColor="@color/shenhui"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_button0"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_button1"
                android:background="@drawable/bg_operate"
                android:gravity="center"
                android:padding="5dp"
                android:text="查看评价"
                android:textColor="@color/shenhui"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@id/textview_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/tv_button0"
                android:paddingTop="2dp"
                android:text="元"
                android:textColor="#f59287"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/textview_7"
                android:text="180"
                android:textColor="#f26d5f"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:layout_marginLeft="10dp"
            android:src="@color/xian" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text=""
            android:visibility="visible"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian" />

</LinearLayout>
