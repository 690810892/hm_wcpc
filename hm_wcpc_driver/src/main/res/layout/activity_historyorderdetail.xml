<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_linearLayout">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--订单信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@id/textview_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/img_center_myorder"
                    android:drawablePadding="15dp"
                    android:layout_margin="15dp"
                    android:text="订单号"
                    android:textColor="@color/black2"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="12dp">

                    <com.hemaapp.hm_FrameWork.view.RoundedImageView
                        android:id="@id/imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/default_user"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:id="@id/imageview_2"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_logo_qiandan"
                        android:layout_marginLeft="15dp"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:id="@id/textview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview"
                        android:layout_marginTop="20dp"
                        android:text="用户名称"
                        android:textColor="@color/shenhui"
                        android:textSize="14sp"/>

                    <ImageView
                        android:id="@id/imageview_0"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/img_sex_boy"
                        android:scaleType="centerCrop"
                        android:layout_toRightOf="@id/textview_1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="21dp"/>

                    <TextView
                        android:id="@id/textview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imageview_0"
                        android:text="乘车次数"
                        android:textColor="@color/qianhui"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@id/textview_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/imageview"
                        android:layout_below="@id/textview_2"
                        android:text="乘车人数"
                        android:textColor="@color/yellow"
                        android:textSize="13sp"/>


                    <ImageView
                        android:id="@id/imageview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/img_phone"/>

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_driver"
                    android:src="@color/xian"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@id/textview_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="车费"
                        android:textColor="@color/qianhui"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/textview_4"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@id/textview_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textColor="@color/status_complete"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="元"
                            android:textColor="@color/status_complete"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/success"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@id/imageview_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_pingjia_s"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:id="@id/imageview_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_pingjia_s"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:id="@id/imageview_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_pingjia_s"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:id="@+id/imageview_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_pingjia_s"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:id="@+id/imageview_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/img_pingjia_s" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="您的评价，让我们做的更好"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/qianhui"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:id="@id/linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_driver"
                        android:src="@color/xian"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="评价留言:"
                        android:textColor="@color/shenhui"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@id/textview_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:text="评价内容"
                        android:textColor="@color/qianhui"
                        android:textSize="14sp"/>

                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/failed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/xian"/>

                <TextView
                    android:id="@id/textview_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="选择的取消原因"
                    android:textColor="@color/qianhui"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@id/textview_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:text="填写的取消原因"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_cancel"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="订单已取消"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="#feffff"
                    android:textSize="14sp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/xian"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
