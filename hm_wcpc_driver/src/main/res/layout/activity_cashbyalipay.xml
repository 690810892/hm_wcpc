<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg_linearLayout">

    <include layout="@layout/title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:src="@color/xian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:paddingBottom="20dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/img_logo_alipay"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imageview">

                <TextView
                    android:id="@id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加支付宝账号"
                    android:textColor="@color/qianhui"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@id/layout_0"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝账号"
                        android:textColor="@color/black2"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@id/textview_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789@qq.com"
                        android:textColor="@color/qianhui"
                        android:textSize="12sp"/>

                </LinearLayout>
            </FrameLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/triangle"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:src="@color/xian"
            android:layout_marginLeft="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:paddingBottom="15dp"
                android:text="当前钱包余额"
                android:textColor="@color/black2"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="元"
                android:textColor="#f26d5f"
                android:textSize="12sp"/>

            <TextView
                android:id="@id/textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/textview_1"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:text="0"
                android:textColor="#f26d5f"
                android:textSize="15sp"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:src="@color/xian"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <ImageView
            android:id="@id/imageview_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/img_logo_money"/>

        <FrameLayout
            android:id="@id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imageview_0">

            <LinearLayout
                android:id="@id/layout_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入提现金额"
                    android:textColor="@color/qianhui"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注：提现金额需为100的整数倍"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"/>

            </LinearLayout>

            <EditText
                android:id="@id/edittext"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:inputType="number"
                android:text=""
                android:hint=""
                android:textColor="@color/black2"
                android:textSize="16sp"/>

        </FrameLayout>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:src="@color/xian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_center_changepwd"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:id="@id/edittext_0"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:text=""
            android:hint="输入登录密码"
            android:textColor="@color/black2"
            android:textColorHint="@color/qianhui"
            android:textSize="14sp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"/>

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="申请提现"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#feffff"
        android:textSize="14sp"
        android:gravity="center"/>

</LinearLayout>
