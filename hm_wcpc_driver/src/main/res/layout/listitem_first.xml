<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@mipmap/img_starttime"
                android:drawablePadding="8dp"
                android:text="出发时间"
                android:textColor="@color/cl_5e5e5e"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_staut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:text="行程状态"
                android:textColor="@color/yellow"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:layout_marginLeft="10dp"
            android:src="@color/xian" />

        <RelativeLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hemaapp.hm_FrameWork.view.RoundedImageView
                android:id="@+id/iv_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_user" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_avatar"
                android:text="用户名称"
                android:textColor="@color/cl_3f3f3f"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/name"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_sex_boy" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/iv_sex"
                android:text="乘车次数"
                android:textColor="@color/cl_a0a0a0"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@id/layout_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/imageview_1"
                android:layout_toRightOf="@id/iv_avatar"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_startposition" />

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="起始点"
                    android:textColor="#616161"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_0"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@id/imageview_1"
                android:layout_toRightOf="@id/iv_avatar"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_endposition" />

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="目的地"
                    android:textColor="#616161"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/imageview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:src="@mipmap/img_first_loc" />

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="25dp"
                    android:src="@color/xian" />

                <ImageView
                    android:id="@+id/iv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="15dp"
                    android:src="@mipmap/img_first_tel" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="拼车"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/img_first_pin"
                android:drawablePadding="10dp"
                android:textColor="@color/yellow"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车拼车"
                android:textColor="@color/yellow"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_driver"
            android:layout_marginLeft="10dp"
            android:src="@color/xian" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@id/textview_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="计费"
                android:textColor="@color/cl_5e5e5e"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/textview_5"
                android:text="180"
                android:textColor="#ff9c58"
                android:textSize="18sp" />

            <TextView
                android:id="@id/textview_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/tv_fee"
                android:paddingTop="2dp"
                android:text="元"
                android:textColor="#ff9c58"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_button"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bt_qiangdan"
                android:gravity="center"
                android:padding="5dp"
                android:text="接到乘客"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_person_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_button"
                android:paddingTop="2dp"
                android:text="乘车人数"
                android:textColor="@color/cl_4e4d5d"
                android:textSize="12sp"
                android:visibility="visible" />



        </RelativeLayout>

    </LinearLayout>


</LinearLayout>

